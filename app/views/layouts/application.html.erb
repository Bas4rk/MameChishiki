            <%= link_to current_user.username,current_user , { :class => "navbar-brand" }%>
            <%= link_to 'ユーザー一覧',root_path , { :class => "navbar-brand" }%>
            <%= link_to '新規投稿',new_post_path , { :class => "navbar-brand" }%>
          <% else %>
            <%= link_to 'サインアップ',new_user_registration_path , { :class => "navbar-brand" }%>
            <%= link_to 'ログイン',new_user_session_path , { :class => "navbar-brand" }%> 
          <% end %>
        </div>
