  <div class="card bg-light mb-3">
    <%= link_to "", post_path(post) ,{ :class => "link"} %>
    <div class="card-header">
      <div class="circle-avatar">
        <% if post.user.image.attached? %>
          <%= link_to image_tag(post.user.image), post.user , { :class => "inlink" }%>
        <% else %>
          <%= link_to image_tag(asset_pack_path 'media/images/dafault.jpg'), post.user , { :class => "inlink" }%>  
        <% end %>
        <%= link_to  post.user.username, post.user , { :class => "inlink" }%>
      </div>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= post.title %></h4>
      <p class="card-text"><%= post.content %></p>
      <% if post.image.attached? %>
        <%= link_to image_tag(post.image),post.image, { :class => "inlink" , :rel => "lightbox"}%>
      <% end %>
    </div>
    <div class="card-footer" id="post-<%= post.id %>" data-post-id="<%= post.id %>" >
      <%= time_ago_in_words(post.created_at) %>前に作成
      <div class="comment-counts">
        <%= image_tag(asset_pack_path 'media/images/comment.png') %>
        <%= post.comments.count %>件のコメント
      </div>
       <%= render "likes/like",post: post %> 
      <% if post.user == current_user %>
        <%= link_to '削除', post, { :class => "inlink" , method: :delete} %>
      <% end %>
    </div>
 </div>
