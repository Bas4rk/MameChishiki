<div class = "user_page">
<div class = "profile">
  <div class = "profile_top">
    <% if @user.image.attached? %>
      <%= link_to image_tag(@user.image),@user.image, :rel => "lightbox"%>
    <% end %>
      <h1><%= @user.username %></h1>
  </div>
  <div class = "profile_intro">
    <%= @user.introduction%>  
  </div>
</div>

<div class = "posts">
  <%=@user.username %>のページです。
  <h2><%= @user.username %></h2>
  <ol>
    <%= render @posts %>
  </ol>
  <%= will_paginate @posts %>
</div>
</div>
