    <span class="like">
    <% if post.iine?(current_user) %>
      <%= form_for(post.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs inlink") do %>
          <i class="fas fa-heart"></i><%= content_tag :span, "#{post.likes_count}" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(post.likes.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :post_id, post.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs inlink") do %>
          <i class="far fa-heart"></i><%= content_tag :span, "#{post.likes_count}" %>
        <% end %>
      <% end %>
    <% end %>
  </span>
